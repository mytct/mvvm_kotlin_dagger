<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:text="@string/crear_mi_cuenta"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_large"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"
        android:hint="@string/escribe_tu_nombre"
        android:textSize="@dimen/font_size_normal"
        android:drawableLeft="@drawable/ic_account_menu"
        android:drawablePadding="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"
        android:hint="@string/escribe_tu_contrasena"
        android:textSize="@dimen/font_size_normal"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_password"
        android:drawablePadding="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtUserName"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnIcrearMiCuentaAhora"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_height_button"
        android:background="@drawable/background_button_orange_corner"
        android:text="@string/icrear_mi_cuenta_ahora"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font_size_larger_normal"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        tools:layout_editor_absoluteX="20dp" />


    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/btnIcrearMiCuentaAhora"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@drawable/ic_fb"
            />
        <ImageView
            android:id="@+id/ivTwitter"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@drawable/ic_twitter"
            />
        <ImageView
            android:id="@+id/ivGoogle"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@drawable/ic_gg"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icrear_mi_cuenta_ahoara"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/font_size_normal"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>
