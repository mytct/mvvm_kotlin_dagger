<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/user_photo_default"
        android:layout_marginTop="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/buenos_aires"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_large"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buenos_aires_des"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_larger_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actualmente_realizando"
        android:textColor="@color/colorOrange"
        android:gravity="center_horizontal"
        android:textSize="@dimen/font_size_larger_small"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/colorGreen"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDescription"/>

    <TextView
        android:id="@+id/tvEstructuraDePatronatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/estructura_de_patronatos"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edtBlank1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_normal"
        android:background="@drawable/background_edittext_gray"
        android:padding="@dimen/dimen_15dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="8"
        android:gravity="top"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEstructuraDePatronatos"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/edtBlank2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/font_size_normal"
        android:background="@drawable/background_edittext_gray"
        android:padding="@dimen/dimen_15dp"
        android:inputType="textMultiLine"
        android:lines="6"
        android:maxLines="8"
        android:gravity="top"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/edtBlank1"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>
